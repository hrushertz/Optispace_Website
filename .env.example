# ===========================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ===========================================
# Copy this file to .env and configure with your actual values
# DO NOT commit .env to version control
# ===========================================

# Environment Mode
# Options: development, production
ENVIRONMENT=development

# Base URL Configuration
# Development: http://localhost/Optispace_Website
# Production: https://www.solutionsoptispace.com
BASE_URL=http://localhost/Optispace_Website

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

DB_HOST=localhost
DB_NAME=optispace_db
DB_USER=root
DB_PASS=

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_AUTH=true
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
MAIL_FROM=your_email@gmail.com
MAIL_FROM_NAME=OptiSpace Solutions
MAIL_REPLY_TO=your_email@gmail.com

# ===========================================
# SECURITY SETTINGS
# ===========================================

SESSION_LIFETIME=7200
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax

CSRF_TOKEN_NAME=csrf_token
CSRF_TOKEN_EXPIRE=3600

MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================

MAX_UPLOAD_SIZE=20971520
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
UPLOAD_DIR=assets/img/gallery

# ===========================================
# RATE LIMITING & SECURITY
# ===========================================

MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800
MAINTENANCE_MODE=false

# ===========================================
# CACHE SETTINGS
# ===========================================

CACHE_ENABLED=false
CACHE_DURATION=3600

# ===========================================
# DEBUG & ERROR REPORTING
# ===========================================

DISPLAY_ERRORS=true
LOG_ERRORS=true
ERROR_LOG_FILE=logs/error.log
DEBUG_MODE=true
